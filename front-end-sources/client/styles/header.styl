/**
 * header styles
 *
 * @author Viacheslav Lotsmanov
 */

@require 'button-mixin'

.head-block
	display block
	min-height $head-block-min-height
	bg('header-bg.jpg', 40% 0 no-repeat $bg-color)

.right-part
	display block
	margin-left -73px
	width 300px
	relative left 72%
	padding-top 30px
	padding-bottom 30px

	img
		display block
		relative left -25px

	.slogan
		display block
		font-metrics 18px 23px
		margin-top (37px - 23px)
		color $text-color2

	ul.phones
		reset-box-model()
		display block
		margin-top: 10px

		& > li
			reset-box-model()
			display block
			font-metrics 24px 32px

			&:before
				display none

			& > a
				border-bottom 0
				color $text-color

	button.call_me
		button-mixin()
		margin-top 10px

	nav.main-menu
		display block
		margin-top 10px

		ul
			reset-box-model()

		ul > li
			$h = 28px
			$lh = (($h/2) + 2px)
			$pX = (($h - $lh) / 2)

			reset-box-model()
			display block
			font-metrics 14px $lh
			padding $pX 0
			z-index 0

			&:before
				display none

			&.active > span, &.active > a
				$p-X = 8px
				$p-Y = 4px

				relative auto
				color $text-invert-color2
				z-index 1
				border-bottom 0

				&:before
					pseudo-block()
					absolute left (-($p-X)) top (-($p-Y))
					padding $p-Y $p-X
					size 100%
					background $text-color2
					z-index -2

			&.active > span
				cursor default

			&.active > a
				&:after
					pseudo-block()
					absolute left 0 bottom -1px
					size 100% 1px
					background $link-line-color2
					overflow hidden
					font-metrics 0 0
					z-index 0
					transition background $animation-speed $animation-curve

				&:hover
					color $link-hover-text-color2

					&:after
						background $link-hover-line-color2

.catalog-menu
	@require 'catalog-menu'
