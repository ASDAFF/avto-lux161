/**
 * main admin panel styles file
 *
 * @author Viacheslav Lotsmanov
 */

$static-path = '/static/'
$icon-font-path = pathjoin($static-path, 'icons-fonts/')

@require 'bootstrap'
@require 'nib'

html, body
	height 100%

.loading
	display table
	size 100%

	.wrap
		display table-cell
		white-space nowrap
		text-align center
		vertical-align middle

.fatal-error
	padding 50px

.login-form.container
	h1
		font-size inherit
		line-height inherit
		font-weight bold

	// vertical centering
	@media (min-width $screen-md-min)
		height 100%
		text-align center

		.row
			height 100%
			text-align center

		.col-md-4.column
			display inline-block
			width 33%
			vertical-align middle
			float none
			text-align left

			&:first-child
				display inline-block
				height 100%

	form
		$p = 10px
		padding-top $p
		padding-bottom $p

		label
			width 100%
