$static-path = '/static/'
$icon-font-path = pathjoin($static-path, 'icons-fonts/')

@require 'bootstrap'
@require 'nib'

html, body
	height 100%

@media (min-width $screen-md-min)
	.v-stretchy
		height 100%

.align-right
	text-align right

.loading
	@import 'view/loading'

.fatal-error
	padding 50px

.login-form
	@import 'view/login-form'

.panel-view
	@import 'view/panel'

.edit-form
	@import 'view/form'

.auth-username-block
	margin-top $padding-large-vertical
	padding-left $padding-large-horizontal
	padding-right $padding-large-horizontal

@import 'ordering-fields'
@import 'drag-n-drop'
