extends layout

block page-specific
	.content-page
		ul.cars.left
			each i in ['1','2','3','4','5','6']
				li
					img(alt="", src=static_url('tmp/left/' + i + '.jpg'))
		.content
			if show_h1
				if page_title
					h1=page_title
			main
				if page_content
					=page_content
				if error_msg_list
					ul.error-messages
						each msg in error_msg_list
							li=msg
				if success_msg_list
					ul.success-messages
						each msg in success_msg_list
							li=msg
				block content
		ul.cars.right
			each i in ['1','2','3','4','5','6']
				li
					img(alt="", src=static_url('tmp/right/' + i + '.jpg'))
