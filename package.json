{
  "dependencies": {
    "front-end-gulp-pattern": "~0.0.1",
    "gulp-stylus": "^1.3.4",
    "gulp-browserify": "~0.5",
    "gulp-uglify": "^1.0.1",
    "liveify": "1.3.1",
    "nib": "^1.0.4",
    "bootstrap-styl": "^4"
  },
  "scripts": {
    "postinstall": "./deploy.sh"
  },

  "gulp": {
    "distclean": [
      "./gulp",
      "./node_modules"
    ],
    "styles": {
      "client": {
        "type": "stylus",
        "path": "./front-end-sources/client/styles/",
        "srcDir": "./front-end-sources/client/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "client-build.css",
        "shim": [
          "./shim/nib"
        ]
      },
      "admin": {
        "type": "stylus",
        "path": "./front-end-sources/admin/styles/",
        "srcDir": "./front-end-sources/admin/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "admin-build.css",
        "shim": [
          "./shim/nib",
          "./shim/bootstrap-stylus"
        ]
      }
    },
    "scripts": {
      "client": {
        "type": "liveify",
        "path": "./front-end-sources/client/scripts/",
        "srcDir": "./front-end-sources/client/scripts/",
        "mainSrc": "main.ls",
        "destDir": "./static/",
        "buildFile": "client-build.js",
        "jshintDisabled": true
      }
    }
  }
}
