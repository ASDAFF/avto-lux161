{
  "dependencies": {
    "front-end-gulp-pattern": "^1",
    "gulp-stylus": "^1.3.4",
    "gulp-browserify": "~0.5",
    "gulp-uglify": "^1.0.1",
    "liveify-stable": "^1",
    "LiveScript": "1.3.1",

    "nib": "^1.0.4",
    "bootstrap-styl": "^4",
    "jade": "^1.8.2",

    "bower": "^1"
  },
  "scripts": {
    "postinstall": "./deploy.sh"
  },

  "gulp": {
    "distclean": [
      "./gulp",
      "./node_modules"
    ],
    "styles": {
      "client": {
        "type": "stylus",
        "path": "./front-end-sources/client/styles/",
        "srcDir": "./front-end-sources/client/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "client-build.css",
        "shim": [
          "./shim/nib"
        ]
      },
      "admin": {
        "type": "stylus",
        "path": "./front-end-sources/admin/styles/",
        "srcDir": "./front-end-sources/admin/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "admin-build.css",
        "shim": [
          "./shim/nib",
          "./shim/bootstrap-stylus"
        ]
      }
    },
    "scripts": {
      "client": {
        "type": "browserify",
        "path": "./front-end-sources/client/scripts/",
        "srcDir": "./front-end-sources/client/scripts/",
        "mainSrc": "main.ls",
        "destDir": "./static/",
        "buildFile": "client-build.js",
        "transform": ["liveify-stable"],
        "extensions": [".ls"],
        "jshintDisabled": true,
        "shim": {
          "jquery": {
            "path": "./bower_components/jquery/dist/jquery.js",
            "exports": "jQuery"
          },
          "jquery-colorbox": {
            "path": "./bower_components/jquery-colorbox/jquery.colorbox.js",
            "exports": ""
          },
          "jquery-ui.datepicker": {
            "path": "./bower_components/jquery-ui/ui/datepicker.js",
            "exports": "",
            "depends": { "jquery": "jQuery" }
          }
        }
      },
      "admin": {
        "type": "browserify",
        "path": "./front-end-sources/admin/scripts/",
        "srcDir": "./front-end-sources/admin/scripts/",
        "mainSrc": "main.ls",
        "destDir": "./static/",
        "buildFile": "admin-build.js",
        "transform": ["liveify-stable"],
        "extensions": [".ls"],
        "jshintDisabled": true,
        "shim": {
          "jquery": {
            "path": "./bower_components/jquery/dist/jquery.js",
            "exports": ""
          },
          "marionette": {
            "path": "./bower_components/marionette/lib/backbone.marionette.js",
            "exports": ""
          },
          "backbone": {
            "path": "./bower_components/backbone/backbone.js",
            "exports": ""
          },
          "underscore": {
            "path": "./bower_components/underscore/underscore.js",
            "exports": ""
          },
          "backbone.babysitter": {
            "path": "./bower_components/backbone.babysitter/lib/backbone.babysitter.js",
            "exports": ""
          },
          "backbone.wreqr": {
            "path": "./bower_components/backbone.wreqr/lib/backbone.wreqr.js",
            "exports": ""
          },
          "jade": {
            "path": "./node_modules/jade",
            "exports": ""
          }
        }
      }
    }
  }
}
