{
  "dependencies": {
    "front-end-gulp-pattern": "^1",
    "gulp-stylus": "^1.3.4",
    "gulp-browserify": "~0.5",
    "gulp-uglify": "^1.0.1",
    "liveify-stable": "^1",
    "LiveScript": "1.3.1",
    "nib": "^1.0.4",
    "bootstrap-styl": "^4",
    "jquery": "2.1.3",
    "jquery-colorbox": "1.5.10"
  },
  "scripts": {
    "postinstall": "./deploy.sh"
  },

  "gulp": {
    "distclean": [
      "./gulp",
      "./node_modules"
    ],
    "styles": {
      "client": {
        "type": "stylus",
        "path": "./front-end-sources/client/styles/",
        "srcDir": "./front-end-sources/client/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "client-build.css",
        "shim": [
          "./shim/nib"
        ]
      },
      "admin": {
        "type": "stylus",
        "path": "./front-end-sources/admin/styles/",
        "srcDir": "./front-end-sources/admin/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "admin-build.css",
        "shim": [
          "./shim/nib",
          "./shim/bootstrap-stylus"
        ]
      }
    },
    "scripts": {
      "client": {
        "type": "browserify",
        "path": "./front-end-sources/client/scripts/",
        "srcDir": "./front-end-sources/client/scripts/",
        "mainSrc": "main.ls",
        "destDir": "./static/",
        "buildFile": "client-build.js",
        "transform": ["liveify-stable"],
        "extensions": [".ls"],
        "jshintDisabled": true,
        "shim": {
          "jquery": {
            "path": "./node_modules/jquery",
            "exports": ""
          },
          "jquery.colorbox": {
            "path": "./node_modules/jquery-colorbox",
            "exports": ""
          }
        }
      }
    }
  }
}
